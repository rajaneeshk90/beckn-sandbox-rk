{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "assets": [
            {
                "include": "**/*.json",
                "outDir": "dist",
                "watchAssets": true
            },
            {
                "include": "**/*.html",
                "outDir": "dist",
                "watchAssets": true
            }
        ],
        "watchAssets": true,
        "deleteOutDir": true
    }
}
